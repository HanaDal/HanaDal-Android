<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hanadal.dooson.hanadal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.sign.SignActivity" />
        <activity android:name=".ui.main.MainActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".ui.app_info.AppInfoActivity" />
        <activity android:name=".ui.make_challenge.MakeChallengeActivity" />
        <activity android:name=".ui.view_challenge.ViewChallengeActivity" />
        <activity android:name=".ui.write_diary.WriteDiaryActivity" />
        <activity android:name=".ui.challenge_info.ChallengeInfoActivity" />
        <activity android:name=".ui.request.RequestActivity" />
        <activity android:name=".ui.view_book.ViewBookActivity" />

        <activity android:name=".TestActivity"/>
    </application>

</manifest>